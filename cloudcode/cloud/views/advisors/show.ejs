<% var page = 'advisors' %>

<html>
  <head>
    <% include ../shared/_header %>
    <link rel="stylesheet" type="text/css" href="/css/advisors.css">
  </head>
  <body>
  	<% include ../shared/_navbar %>

  	<div class="container-fluid">
  		<div class="container">
  			<div class="col-md-8">
  				<h1 class="title"><%= advisor.get('firstName') %> <%= advisor.get('lastName') %></h1>
          <div class="subtitle">
            <p class="timestamp">
              <span class="created"><b>Joined since: </b><%= advisor.createdAt.getMonth() + 1 %>/<%= advisor.createdAt.getDate() %>/<%= advisor.createdAt.getFullYear() %></span>
              <span class="updated"><b>Last Updated: </b><%= advisor.updatedAt.getMonth() + 1 %>/<%= advisor.updatedAt.getDate() %>/<%= advisor.updatedAt.getFullYear() %></span>
            </p>
            <hr>
          </div>

          <div class="clients">
            <h3>Clients</h3>
            <ul>
              <% clients.forEach(function(client){ %>
                <li><%= client.get('firstName') %> <%= client.get('lastName') %></li>
              <% }) %>
            </ul>
          </div>

				</div>
				<div class="col-md-4 advisor-sidebar">
          <div class="sidebar-block">
            <h4>Contact Info</h4><hr>
            <p>
              <b>E-mail: </b><%= advisor.get('email') %><br>
              <b>Phone: </b><%= advisor.get('phoneNumber') %><br>
            </p>
          </div>

				</div>
  		</div>
  	</div>
  </body>
 </html>