<% var page = 'advisors' %>

<html>
  <head>
    <% include ../shared/_header %>
    <script src="/scripts/check_submit.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/advisors.css">
  </head>
     
  <body>

    <% include ../shared/_navbar %>


    <div class="container-fluid" style="padding-top: 20px;">
      <div class="row">
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Add New Advisor</h3>
            </div>
            <div class="panel-body">
              <form method="POST" name="createform" action="/advisors" onSubmit="return TestDataCheck()">
                <div class="form-group">
                  <font size="1em" style="color:red; position:relative; top: -10px;">* is required</font><br>
                  
                  <label for="ex1">First Name:<span style="color:red;"> *</span></label>
                  <input class="form-control" name="firstName" id="firstName" type="text" value="">
                  <br>

                  <label for="ex1">Last Name:<span style="color:red;"> *</span></label>
                  <input class="form-control" name="lastName" id="lastName" type="text" value="">
                  <br>

                  <label for="ex1">E-mail:<span style="color:red;"> *</span></label>
                  <input class="form-control" name="email" id="email" type="text" value="">
                  <br>

                  <div style="display: table; margin: 0 auto;">
                    <button type="submit" class="btn btn-primary">Create</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>  
      </div>
    </div>
  </body>
</html>