<% var page = 'clients' %>

<html>
  <head>
    <% include ../shared/_header %>
    <script src="/scripts/check_submit.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/clients.css">
  </head>
     
  <body>

    <% include ../shared/_navbar %>


    <div class="container-fluid" style="padding-top: 20px;">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Add New Client</h3>
        </div>
        <div class="panel-body">
          <form method="POST" name="createform" action="/clients" onSubmit="return TestDataCheck()">
            <div class="form-group">
              <div class="col-xs-12">

                <div class="row">
                  <div class="col-md-4"> 
                    
                    <font size="1" style="color:red; position:absolute; top: -20px;">* is required</font>
                    
                    <label for="ex1">Username:<span style="color:red;"> *</span></label>
                    <input class="form-control" name="username" id="username" type="text" value="">
                    <br>

                    <label for="ex1">Password:<span style="color:red;"> *</span></label>
                    <input class="form-control" name="password" id="password" type="password" value="">
                    <br>

                    <label for="ex1">E-mail:<span style="color:red;"> *</span></label>
                    <input class="form-control" name="email" id="email" type="text" value="">
                    <br>

                    <div style=" padding-left: 200px;">
                      <button type="submit" class="btn btn-primary">Create</button>
                    </div>

                  </div>

                   
                </div>
              </div>
            </div>
          </form>
        </div>  
      </div>
    </div>
  </body>
</html>