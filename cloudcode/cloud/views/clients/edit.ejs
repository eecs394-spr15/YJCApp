<% var page = 'clients' %>

<html>
  <head>
    <% include ../shared/_header %>
    <script src="/scripts/check_submit.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/clients.css">
  </head>
     
  <body>

    <% include ../shared/_navbar %>


    <div class="container-fluid" style="padding-top: 20px;">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Update Client Information</h3>
        </div>
        <div class="panel-body">
          <form method="POST" name="updateform" action="/client/<%= client.id %>">
            <div class="form-group">
              <div class="col-xs-12">

                <div class="row">
                  <div class="col-md-4"> 
                    <input type="hidden" name="_method" id="requestType" value="PUT" />
                    <font size="1" style="color:red; position:absolute; top: -20px;">* is required</font>

                    <label for="ex1">E-mail:<span style="color:red;"> *</span></label>
                    <input class="form-control" name="email" id="email" type="text" value="">
                    <br>

                    <label for="ex1">Phone number:<span style="color:red;"> *</span></label>
                    <input class="form-control" name="phoneNumber" id="phoneNumber" type="text" value="">
                    <br>

                    <label for="ex1">Advisor: <span style="color:red;"> *</span></label>
                    <select class="form-control" name="advisor" id="advisor">
                      <% for(var i = 0; i < advisors.length; i++){ %>
                        <option><%= advisors[i] %></option>
                      <% } %>
                    </select>
                    <br>

                  </div>

                  <div class="col-md-4">
                    
                    <label for="ex1">First Name:<span style="color:red;"> *</span></label>
                    <input class="form-control" name="firstName" id="firstName" type="text" value="">
                    <br>

                    <label for="ex1">Last Name:<span style="color:red;"> *</span></label>
                    <input class="form-control" name="lastName" id="lastName" type="text" value="">
                    <br>

                    <label for="ex1">Date of Birth:<span style="color:red;"> *</span></label>
                    <input id="datepicker" class="form-control" name="dateOfBirth" id="dateOfBirth" type="text">
                    <script>
                    $(function() {
                      $( "#datepicker" ).datepicker();
                    });
                    </script>
                    <br>

                    <label for="ex1">Criminal History:<span style="color:red;"> *</span></label>
                    <label class="radio-inline"><input type="radio" name="criminalHistory" value="y">Yes</label>
                    <label class="radio-inline"><input type="radio" name="criminalHistory" value="n">No</label>
                    <br><br>

                    <label for="ex1">Education (select all that apply): <span style="color:red;"> *</span></label>
                    <div class="checkbox" style="margin-top:0">
                      <label><input type="checkbox" name="education" value="GED">GED</label>
                    </div>
                    <div class="checkbox">
                      <label><input type="checkbox" name="education" value="High School Diploma">High School Diploma</label>
                    </div>
                    <div class="checkbox">
                      <label><input type="checkbox" name="education" value="Associate's Degree">Associate's Degree</label>
                    </div>

                  </div>
                   
                  <div class="col-md-4">

                    <label for="ex1">Zip Code:<span style="color:red;"> *</span></label>
                    <input class="form-control" name="zipcode" id="zipcode" type="text" value="">
                    <br>
                    
                    <label for="ex1">Job Radius:<span style="color:red;"> *</span></label>
                    <input class="form-control" name="jobRadius" id="jobRadius" type="text" value="">
                    <br>

                    <label for="ex1">Interests (select all that apply): <span style="color:red;"> *</span></label>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="checkbox" style="margin-top:0">
                          <label><input type="checkbox" name="interests" value="Automotive">Automotive</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="interests" value="Clerical/Administrative">Clerical/Administrative</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="interests" value="Food Service">Food Service</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="interests" value="Healthcare">Healthcare</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="interests" value="Hospitality">Hospitality</label>
                        </div>
                      </div>

                      <div class="col-md-6">
                        <div class="checkbox" style="margin-top:0">
                          <label><input type="checkbox" name="interests" value="IT/Technical">IT/Technical</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="interests" value="Retail">Retail</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="interests" value="Security">Security</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="interests" value="Odd-Job/Summer Job">Odd-Job/Summer Job</label>
                        </div>
                      </div>
                    </div>
                    <br>

                    <label for="ex1">Available Times (select all that apply): <span style="color:red;"> *</span></label>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="checkbox" style="margin-top:0">
                          <label><input type="checkbox" name="timeAvailable" value="1st Shift (7:00am - 3:00pm)">1st Shift (7:00am - 3:00pm)</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="timeAvailable" value="2nd Shift (2:00pm-10:00pm)">2nd Shift (2:00pm-10:00pm)</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="timeAvailable" value="3rd Shift (11:00pm - 7:00am)">3rd Shift (11:00pm - 7:00am)</label>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="checkbox" style="margin-top:0">
                          <label><input type="checkbox" name="timeAvailable" value="Weekends">Weekends</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="timeAvailable" value="Full-Time">Full Time</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" name="timeAvailable" value="Part-Time">Part Time</label>
                        </div>
                      </div>
                    </div>
                    <br>

                    <div style="display: table; margin: 0 auto;">
                      <button type="submit" class="btn btn-primary" style="margin-right: 10px" onclick="$('#requestType').attr('value','PUT')">Update</button>
                      <button type="submit" class="btn btn-danger" onclick="$('#requestType').attr('value','DELETE')">Delete</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>  
      </div>
    </div>
  </body>
</html>